target 'Auth_Sample' do
  platform :ios, '8.0'
  pod 'FirebaseCommunity/Auth', :path => '../'
  pod 'FBSDKLoginKit'
  pod 'GoogleSignIn'
  # Lock to the 1.0.9 version of InstanceID since 1.0.10 added a dependency
  # to FirebaseCore
  pod 'FirebaseInstanceID', '1.0.9'
  pod 'GTMSessionFetcher/Core'
end

